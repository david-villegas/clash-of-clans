.container.pt-5.form-pos
  %h2{class: 'text-center form-title'} Registro de Usuario
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render 'shared/alert' if (devise_error_messages!.present?)
    .form-group
      .row.justify-content-center
        .col-md-6
          = f.label :name, 'Nombre y Apellido', class:'form-font'
          = f.text_field :name, class: 'form-control', autofocus: true, autocomplete: "name"
    .form-group
      .row.justify-content-center
        .col-md-6
          = f.label :email, 'Correo electrónico', class:'form-font'
          = f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email"
    .form-group
      .row.justify-content-center
        .col-md-6
          = f.label :password,'Contraseña', class:'form-font'
          - if @minimum_password_length
            %span{class:'form-font'} (mínimo #{@minimum_password_length} caracteres)
          = f.password_field :password, class: 'form-control', autocomplete: "new-password"
    .form-group
      .row.justify-content-center
        .col-md-6
          = f.label :password_confirmation,'Repetir contraseña', class:'form-font'
          = f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password"
    -# .form-group
    -#   .row.justify-content-center
    -#     .col-md-6
    -#       = f.label :role,'Rol de Usuario'
    -#       = f.select :role, User.roles.keys.map { |role| [role.titleize, role]}, {}, {class: 'form-control custom-select', required: 'true'}
    .actions.text-center
      .form-group
        .row.justify-content-center
          .col-md-3
            = f.submit "Registrarse", class: 'btn btn-primary btn-block'
          .col-md-3
            = link_to "Volver", new_user_session_path, class: 'btn btn-primary btn-block'
%a{href: articles_path}=image_tag 'favicon.ico', class:'btn_home'
