.container
  .row.justify-content-center
    .col-md-12
      %h2{class:'post-font post-font-title fix_top'}=@article.title
      %h3=raw @article.description
  .row.justify-content-end
    .col-md-5.signature
      %span{class:'text-center'}
        Escrito por:
        %span{class:"font-weight-bold font-italic"}
          - if @article.user.profile.present?
            =link_to "#{@article.user.name}", profile_path(@article.user.profile.id), target: "_blank"
          -else
            =@article.user.name
        en fecha:
        %span{class:"font-weight-bold font-italic"}
          =@article.created_at.strftime('%d-%m-%Y')
  =link_to articles_path, class:'btn btn-sm btn-outline-success mt-3' do
    Regresar
  .row.justify-content-start
    .col-12
      %hr
  .row.justify-content-center
    .col-md-8
      %h2{class:'pt-3 post-font post-font-comment'}Comentarios
      - if @comments.present?
        - @comments.each do |comment|
          .container.comment-box.mt-2
            .row
              - if comment.user.profile.present?
                .col-md-2.pt-2
                  = image_tag (url_for(comment.user.profile.avatar)), class: 'profile'
              -else
                .col-md-2.pt-2
                  = image_tag ('default_avatar.png'), class: 'profile'
              .col-md-10
                %span{class: 'font-weight-bold'}=comment.user.name
                %h6{class:'comment-date font-italic'}=comment.created_at.strftime('%b %d, %Y at %H:%M')
                %p=comment.body
        -# .mt-3= will_paginate @comments
      - else
        %h5{class: 'font-italic'} No hay comentarios publicados
  .row.justify-content-center
    .col-md-8.mt-3
      - if @user.present?
        -# = render 'comment_form'
        %button.btn.btn-sm.btn-outline-info{"data-target" => "#comment", "data-toggle" => "modal", :type => "button"}
          Comentar
  .mt-3= will_paginate @comments
